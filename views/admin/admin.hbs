    <div class="modal-dialog admin-modal-dialog">
        <div class="modal-content bg-info">
            <div class="modal-header">
                <h4 class="modal-title">Edit admin</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form role="form" method="POST" class="updateForm form-horizontal" action="/admin?_method=PUT"
                enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="first_name" class="col-form-label">First Name <sup>*</sup>
                                </label>

                                <input type="text" class="form-control updateInputField" id="first_name" name="first_name"
                                    placeholder="Enter First Name" />

                                {{#if session.errors.first_name}}
