{{> contentHeader page="Exam"}}
{{> messages}}
<div class="row">
    <div class="col-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Add Exam</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" class="form my-form" method="POST" action="/exam">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exam_name">Exam Name</label>
                        <input type="text" class="form-control" id="exam_name" name="exam_name" placeholder="Enter Exam Name">
                    </div>
                    <div class="form-group">
                        <label for="starting_date">Starting Date</label>
                        <input type="text" class="form-control inputDate" id="starting_date" name="starting_date">
                    </div>
                    <div class="form-group">
                        <label for="ending_date">Ending Date</label>
                        <input type="text" class="form-control inputDate" id="ending_date" name="ending_date" >
                    </div>
                   
                    <div class="form-group">
                        <button type="submit" class="btn btn-info form-submit">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <div class="card card-info">
            <div class="card-header ">
                <h3 class="card-title">All Exam</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                {{#if error}}
                    {{error}}
                {{else}}
                    <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12 col-md-6"></div>
                            <div class="col-sm-12 col-md-6"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="dataTable" class="table table-bordered table-hover dataTable dtr-inline"
                                    role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting" tabindex="0" aria-controls="dataTable">ID</th>
                                            <th class="sorting_desc" tabindex="0" aria-controls="dataTable">Exam Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTable">Starting Date</th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTable">Ending Date</th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTable">
                                                Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {{#each exams}}
                                            <tr role="row" class="odd">
                                                <td>{{incrementOne @index}}</td>
                                                <td class="sorting_1" tabindex="0">{{exam_name}}</td>
                                                <td>{{starting_date}}</td>
                                                <td>{{ending_date}}</td>
                                                <td>
                                                    <button data-id="{{_id}}" onclick="showUpdateModal(this, 'exam')"
                                                        data-toggle="modal" data-target="#update"
                                                        class="btn btn-primary btn-small">Edit</button>
                                                    <button data-id="{{_id}}"
                                                        onclick="deleteModalHandler(this, 'exam')" data-toggle="modal"
                                                        data-target="#delete"
                                                        class="btn btn-danger btn-small">Delete</button>
                                                </td>
                                            </tr>
                                        {{/each}}

                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
                {{/if}}
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div>
    <!-- /.col -->
</div>

<div class="modal fade" id="delete" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Delete exam</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <Do>Are you sure? Do you want to delete this Record?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button onclick="deleteItemHandler(this, 'exam')" style="width: 100%;" type="button"
                    class="btn btn-light deleteBtn">Delete</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="update" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content bg-info">
            <div class="modal-header">
                <h4 class="modal-title">Edit Exam</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form role="form" method="POST" class="form updateForm" action="/exam?_method=PUT">
                <div class="modal-body">
                    <!-- form start -->
                    <div class="form-group">
                        <label for="exam_name">Name</label>
                        <input type="text" class="form-control updateInputField" name="exam_name" id="exam_name"
                            placeholder="Enter Exam name">
                    </div>
                    <div class="form-group">
                        <label for="starting_date">Starting Date</label>
                        <input type="text" class="form-control inputDate updateInputField" id="starting_date" name="starting_date">
                    </div>
                    <div class="form-group">
                        <label for="ending_date">Ending Date</label>
                        <input type="text" class="form-control inputDate updateInputField" id="ending_date" name="ending_date">
                    </div>
                    <input type="hidden" name="_id" class="hiddenId updateInputField">
                </div>
                <div class="modal-footer justify-content-between">
                    <button style="width: 100%;" type="submit" class="btn btn-light">Update</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
