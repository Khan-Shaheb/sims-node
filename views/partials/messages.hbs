{{#if successMessage}}
    <div class="row">
        <div class="col-6">
            <div class="alert alert-success alert-dismissible fade show hide" role="alert">
                {{successMessage}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>

{{/if}}
{{#if errorMessage}}
    <div class="row">
        <div class="col-6">
            <div class="alert alert-danger alert-dismissible fade show hide" role="alert">
                {{errorMessage}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>

{{/if}}
